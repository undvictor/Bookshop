@page
@model LoginModel

@{ ViewData["Title"] = "Log in"; }



<style>
	.bd-placeholder-img {
		font-size: 1.125rem;
		text-anchor: middle;
		-webkit-user-select: none;
		-moz-user-select: none;
		user-select: none;
	}


	#Login-form {
		display: flex;
		align-items: center;
		padding-top: 40px;
		padding-bottom: 40px;
		background-color: #f5f5f5;
	}

	.form-signin {
		width: 100%;
		max-width: 330px;
		padding: 15px;
		margin: auto;
	}

		.form-signin .checkbox {
			font-weight: 400;
		}

		.form-signin .form-control {
			position: relative;
			box-sizing: border-box;
			height: auto;
			padding: 10px;
			font-size: 16px;
		}

			.form-signin .form-control:focus {
				z-index: 2;
			}

		.form-signin input[type="email"] {
			margin-bottom: -1px;
			border-bottom-right-radius: 0;
			border-bottom-left-radius: 0;
		}

		.form-signin input[type="password"] {
			margin-bottom: 10px;
			border-top-left-radius: 0;
			border-top-right-radius: 0;
		}
</style>

<div id="Login-form" class="text-center">

	<main class="form-signin">
		<form>

			<i class="bi bi-book-fill" style="font-size: 8rem; color: darkblue;"></i>
			<h1 class="h3 mb-3 fw-normal">Please sign in</h1>

			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Input.Email"></label>
				<input asp-for="Input.Email" placeholder="Email address" class="form-control" />
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.Password"></label>
				<input asp-for="Input.Password" placeholder="Password" class="form-control" />
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="checkbox">
					<label asp-for="Input.RememberMe">
						<input asp-for="Input.RememberMe" />
						@Html.DisplayNameFor(m => m.Input.RememberMe)
					</label>
				</div>
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">Log in</button>
			</div>
			<div class="form-group">
				<p>
					<a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
				</p>

			</div>

		</form>
	</main>

</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
